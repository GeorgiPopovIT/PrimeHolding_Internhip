@model EmployeeInputModel

<div class="row col-md-4 offset-4">
	<form method="post">
		<div class="mb-3">
			<input type="hidden" asp-for="Id" />
			<label class="form-label">Full name</label>
			<input asp-for="FullName" class="form-control" placeholder="Enter full name">
			<span class="small text-danger" asp-validation-for="FullName"></span>
		</div>
		<div class="mb-3">
			<label class="form-label">Email address</label>
			<input asp-for="Email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
			<span class="small text-danger" asp-validation-for="FullName"></span>
		</div>
		<div class="mb-3">
			<label class="form-label">Phone number</label>
			<input asp-for="PhoneNumber" class="form-control" placeholder="Example: +359... or 08...">
			<span class="small text-danger" asp-validation-for="PhoneNumber"></span>
		</div>
		<div class="mb-3">
			<label class="form-label">Date of birth</label>
			<input asp-for="DateOfBirth" class="form-control" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" placeholder="Enter date of birth">
			<span class="small text-danger" asp-validation-for="DateOfBirth"></span>
		</div>
		<div class="mb-3">
			<label class="form-label">Monthly salary</label>
			<input asp-for="MonthlySalary" class="form-control" placeholder="Salary">
			<span class="small text-danger" asp-validation-for="MonthlySalary"></span>
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>
</div>