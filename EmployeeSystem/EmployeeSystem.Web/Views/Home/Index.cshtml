@model IEnumerable<EmployeeInputModel>
@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<h1 class="display-4">Welcome to Employee System!</h1>

	<div class="d-grid gap-2">
		<a class="btn btn-primary" asp-controller="Employee" asp-action="Create">Create Employee</a>
		<a class="btn btn-secondary">Create task</a>
	</div>

	@if (!Model.Any())
	{
		<h2>Not employees yet.</h2>
	}
	else
	{
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>
						Employee's full name
					</th>
					<th>
						Email
					</th>
					<th>
						Phone number
					</th>
					<th>
						Monthly salary
					</th>
				</tr>
			</thead>
			<tbody>
				<tr>
				</tr>
			</tbody>
		</table>
	}
</div>
