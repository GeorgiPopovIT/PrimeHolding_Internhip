@model TaskForEmployeeViewModel

<h2>Tasks of @Model.EmployeeName</h2>

@foreach (var task in Model.Tasks)
{
    <div class="card mb-3" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@task.Title</h5>
            <h6 class="card-subtitle mb-2 text-muted">@task.DueDate</h6>
            <p class="card-text">@task.Description</p>
            <a asp-controller="Task" asp-action="Edit" class="card-link btn btn-warning">Edit task</a>
            <a asp-controller="Task" asp-action="Delete" class="card-link btn btn-danger">Delete</a>
        </div>
    </div>
}


